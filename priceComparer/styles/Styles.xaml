<ResourceDictionary x:Class="styles.Styles"   
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

    <Style x:Key="blueStyle">
        <Setter Property="Grid.Background" Value="#FF478fa0" />
        <Setter Property="TabItem.Foreground" Value="#FF99D8E2"/>
        <Setter Property="TabItem.BorderBrush" Value="#FF5eabbd"/>
    </Style>
    <Style x:Key="lightBlueStyle">
        <Setter Property="Grid.Background" Value="#FF76aab6" />
        <Setter Property="TabItem.Foreground" Value="#FFcccccc"/>
        <Setter Property="TabItem.BorderBrush" Value="#FFd1e2e6"/>
    </Style>
    <Style x:Key="darkBlueStyle">
        <Setter Property="Grid.Background" Value="#FF26464d" />
        <Setter Property="TabItem.Foreground" Value="#FFe74606"/>
        <Setter Property="TabItem.BorderBrush" Value="#FF5eabbd"/>
    </Style>

</ResourceDictionary>